<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.dtsung.work-driver</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/zsh</string>
        <string>-c</string>
        <string>source ~/.zshrc && cd /Users/dtsung/figma/figma && /Users/dtsung/.cargo/bin/work-driver</string>
    </array>

    <key>StartInterval</key>
    <integer>300</integer>

    <key>StandardOutPath</key>
    <string>/tmp/work-driver.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/work-driver-error.log</string>

    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
